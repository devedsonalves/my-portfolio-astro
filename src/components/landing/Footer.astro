---
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";

const socialLinks = [
  {
    logo: "ph ph-github-logo",
    url: "https://github.com/devedsonalves",
  },
  {
    logo: "ph ph-linkedin-logo",
    url: "https://linkedin.com/in/edson4lves",
  },
];
---

<footer id="social-links" class="scroll-mt-12">
  <Wrapper variant="base" class="py-8 2xl:py-16 border-t">
    <div
      class="flex flex-col justify-between gap-8 lg:flex-row lg:items-center"
    >
      <Text
        tag="h2"
        variant="textBase"
        class="font-medium text-zinc-800 dark:text-zinc-200"
      >
        @devedsonalves
      </Text>
      <div class="flex gap-4 lg:justify-end">
        {
          socialLinks.map((link) => (
            <a href={link.url} target="_blank">
              <i
                class={
                  link.logo +
                  " text-black dark:text-white text-3xl duration-300 flex items-center"
                }
              />
            </a>
          ))
        }
      </div>
    </div>
  </Wrapper>
</footer>
